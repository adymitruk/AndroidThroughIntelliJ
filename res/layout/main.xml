<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Token"
            android:id="@+id/tokenRequestButton" android:layout_gravity="center" android:layout_column="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay for Cab"
            android:id="@+id/startWebPage" android:layout_gravity="center" android:singleLine="false"
            android:layout_column="1"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultText" android:layout_column="0"/>
</LinearLayout>

