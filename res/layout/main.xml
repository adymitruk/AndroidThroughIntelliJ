<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
<ScrollView android:isScrollContainer="true" android:layout_height="fill_parent" android:layout_width="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Phone:"
                  android:gravity="right"/>
        <EditText android:id="@+id/phoneInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:text="7782306969"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Amount:"
                  android:gravity="right"/>
        <EditText android:id="@+id/amountInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:numeric="decimal"
                  android:text="12.34"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Name:"
                  android:gravity="right"/>
        <EditText android:id="@+id/nameInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:text="Joe Smith"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Email:"
                  android:gravity="right"/>
        <EditText android:id="@+id/emailInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:text="jsmith@emailplace.com"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Country Code:"
                  android:gravity="right"/>
        <EditText android:id="@+id/countryCodeInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:text="3"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Currency:"
                  android:gravity="right"/>
        <EditText android:id="@+id/currencyInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:text="GBP"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Payment Ref:"
                  android:gravity="right"/>
        <EditText android:id="@+id/paymentRefInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:text="aaaa-aaaaa-aaaaaaa-aaaaa-aaaaaa"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".25"
                  android:text="Vendor ID:"
                  android:gravity="right"/>
        <EditText android:id="@+id/vendorIdInput"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_weight=".75"
                  android:text="705"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate New Reference"
            android:id="@+id/generateNewRefButton" android:layout_gravity="center" android:layout_column="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Token"
            android:id="@+id/tokenRequestButton" android:layout_gravity="center" android:layout_column="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay for Cab"
            android:id="@+id/startWebPage" android:layout_gravity="center" android:singleLine="false"
            android:layout_column="1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Payment Status"
            android:id="@+id/checkPaymentStatusButton" android:layout_gravity="center" android:singleLine="false"
            android:layout_column="1"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resultText" android:layout_column="0"/>
</LinearLayout>
</ScrollView>
</LinearLayout>